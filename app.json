{
  "name": "yt2x",
  "description": "Fetches latest YouTube video & posts to Twitter",
  "scripts": {},
  "env": {
    "LANG": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "X_ACCESS_TOKEN": {
      "required": true
    },
    "X_ACCESS_TOKEN_SECRET": {
      "required": true
    },
    "X_API_KEY": {
      "required": true
    },
    "X_API_KEY_SECRET": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql",
    "scheduler"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "stack": "heroku-22"
}
