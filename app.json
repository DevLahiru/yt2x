{
  "name": "YoutubeToTwitter",  // More descriptive name
  "description": "Fetches latest YouTube video & posts to Twitter",
  "keywords": [  // Added keywords for better discoverability
    "youtube",
    "twitter",
    "automation"
  ],
  "stack": "ruby",
  "build": {
    "commands": [
      "bundle install"
    ]
  },
  "scripts": {
    "postdeploy": "bundle exec rake db:setup"
  },
  "env": {
    "X_API_KEY": "",
    "X_API_KEY_SECRET": "",
    "X_ACCESS_TOKEN": "",
    "X_ACCESS_TOKEN_SECRET": "",
    "DATABASE_URL": "${DATABASE_URL}"
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "scheduler:standard"
  ]
}
